{
  "manifest_version": 3,
  "name": "Have A Nice Bath",
  "version": "1.0",
  "description": "Get a daily motivational thought and a group discussion topic with one click!",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"]
}